{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es5",
    "module": "CommonJS",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "declaration": true,
    "types": [
      "node"
    ],
  },
  "include": [
    "./src/**/*"
  ]
}